<%- include("../partials/header") %>
<div class="row justify-content-center">
    <div class="col-md-12">
        <form action="/campgrounds/<%= campground._id %>/comments/" method="POST">
            <div class="form-group text-center mb-3">
                <h1 class="h3">Comment on <%= campground.name %></h1>
            </div>
            <div class="col-9 col-md-6 col-lg-4 ml-auto mr-auto">
                <div class="form-group mt-4">
                    <textarea class="form-control" name="comment[text]" cols="30" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Add Comment</button>
                </div>
                <a href="/campgrounds">Cancel</a>
            </div>
        </form>
    </div>
</div>
<%- include("../partials/footer") %>