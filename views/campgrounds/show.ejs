<%- include("../partials/header") %>
<div class="row">
    <div class="col-md-9 m-auto">
        <div class="card p-2 mb-4">
            <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
            <div class="card-body">
                <p class="text-right"><%= campground.currency%><%= campground.price %>/night<p>
                <p class="text-right"><%= campground.location %>, <%= campground.country %></p>
                <h3 class="card-title"><%= campground.name %></h3>
                <p><%= campground.description %></p>
                <p>
                    <em>Posted by <%= campground.author.username %></em>
                </p>
                <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form class="delete-btn" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                <% } %> 
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-body">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <div class="row">
                    <% campground.comments.forEach(comment => { %>
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="float-left">
                                        <h6 class="card-title"><%= comment.author.username %></h6>
                                        <p class="card-text"><%= comment.text %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="float-right">
                                <span class="pull-right">10 days ago</span>
                            
                                <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-xs btn-warning" 
                                    href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                                    Edit</a>
                                    <form class="delete-btn" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                        <input class="btn btn-xs btn-danger" type="submit" value="Delete">
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>