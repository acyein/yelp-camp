<%- include("../partials/header") %>
<header class="jumbotron mt-5">
    <div class="container text-center">
        <h1>Welcome to YelpCamp!</h1>
        <p>Explore the wonderful campgrounds in South-East Asia</p>
        <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
    </div>
</header>
<div class="row text-center">
    <div class="col-lg-12 mt-3 mb-5">
        <h2>Our Popular Campgrounds</h2>
    </div>
    <% campgrounds.forEach(campground => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <p class="card-text"><%= campground.country %></p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </div>
                </div>
        </div>
    <% }); %>
</div>
<%- include("../partials/footer") %>